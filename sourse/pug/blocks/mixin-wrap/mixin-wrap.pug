mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin sDepartmentsItem(i, text, modalImg)
	+b.sDepartments-item
		if modalImg
			+img(`img/svg/sDepartments-img-${i}.svg`).modal-img
		else
			+img(`img/svg/sDepartments-img-${i}.svg`).img-svg-js
		span.modal-title!= text

mixin medicalSpecialistsItem(img, title, text)
	+b.sMedicalSpecialists-item
		+e.img-wrap
			.img-wrap-center
				+img(`img/${img}`).modal-img
		h3.modal-title!=title
		p!=text 

mixin cookies()
	+b.cookies
		.container
			.h4 This website uses cookies
			p This website uses cookies to&nbsp;improve user experience. By&nbsp;using our website you consent to&nbsp;all cookies in&nbsp;accordance with our Cookie Policy.
			+e.row-btn
				+e.btn--js.btn.btn-primary(href='#') I agree
				+e.btn.btn.btn-outline-primary(href='#') Request call

mixin upload-field()
	+b.upload-field
		+e.wrap
			+e.input-wrap
				label
					input.input-upload(type='file' name='file')
					span Загрузить
			+e.file-name 