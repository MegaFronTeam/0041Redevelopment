mixin headerBlock(title='Согласование перепланировки любой сложности в Москве и МО')
	// start headerBlock
	+b.headerBlock.section#headerBlock.bg-wrap&attributes(attributes)
		+img('img/headerBlock-bg-1.jpg', 'bg').picture-bg
		.container
			+e.row.row
				+e.col.col
					+b.section-title
						h1!= title
						p Оплата после согласование перепланировки - прописываем в договоре!
					+e.inner-row.row
						mixin item(icon, title, text)
							.col-sm-6.col-lg
								+e.item
									+img(`img/svg/${icon}`).img-svg-js
									h3!= title
									p!= text
						+item('headerBlock-icon-1.svg', '> 1 300', 'перепланировок за&nbsp;2022 год')
						+item('headerBlock-icon-2.svg', '100%', 'вероятность согласования')
						+item('headerBlock-icon-3.svg', '7 лет', 'опыта на&nbsp;рынке, с&nbsp;2016&nbsp;года')
				.col-lg-auto
					+sForm()
	// end headerBlock