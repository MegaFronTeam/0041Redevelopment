			+e.row.row
				.col.d-lg-none
					+menu-toggle()
				.col-auto.col-lg
					.menu-mobile.menu-mobile--js
						.menu-mobile__inner
							+e.inner-row.row
								.col-lg
									.d-flex.align-items-center
										+menu-toggle()
										+mnu()
								.col-lg-auto.order-last.order-lg-0
									+e.text Пн-Пт 10:00-18:00
								.col-lg-auto.order-last.order-lg-0
									+e.text(href='mailto:info@pryamoepravo.ru') info@pryamoepravo.ru
